<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Art Institute Planner</title>
    <script src='https://cdn.tailwindcss.com'></script>
    <link rel='stylesheet' href='/css/jass.css' />
    <link rel='stylesheet' href='/css/style.css' />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200&display=swap'
      rel='stylesheet'
    />
  </head>

  <body>
    <div class='full-body-background'>
      <div class='flex-column justify-space-around'>
        <header
          class='display-flex justify-space-between align-center p-2 h-20'
        >
          <h1>
            <h1 class='text-3xl'>Art Institute Planner</h1>
          </h1>
          <nav>
            <!-- Conditionally render login or logout links -->
            {{#unless logged_in}}
              <button onclick="window.location.href='/'" class='no-button mr-5'>login</button>
            {{/unless}}
            {{#if logged_in}}
              <button class='no-button mr-5' id='logout'>logout</button>
            {{/if}}
          </nav>
        </header>
        <main class='container container-fluid mt-5'>
          <!-- Render the sub layout -->
          {{{body}}}
        </main>
        <footer>

        </footer>
      </div>

      <!-- Render script for logged in users only -->
      {{#if logged_in}}
        <script src='/js/logout.js'></script>
      {{/if}}
    </div>
  </body>
</html>